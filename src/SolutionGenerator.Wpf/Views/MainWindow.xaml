<catel:DataWindow x:Class="SolutionGenerator.Wpf.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:catel="http://catel.codeplex.com"
    xmlns:wpf="clr-namespace:SolutionGenerator.Wpf"
    xmlns:views="clr-namespace:SolutionGenerator.Wpf.Views"
    ShowInTaskbar="True"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="Manual">

    <!-- Resources -->
    <catel:DataWindow.Resources>
    </catel:DataWindow.Resources>

    <!-- Content -->
    <catel:StackGrid x:Name="LayoutRoot">
        <catel:StackGrid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </catel:StackGrid.ColumnDefinitions>

        <catel:StackGrid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="200" />
        </catel:StackGrid.RowDefinitions>

        <views:SolutionOptionsView DataContext="{Binding Solution}" />
        <views:IncludeOptionsView DataContext="{Binding Solution}" />

        <StackPanel Orientation="Vertical">
            <CheckBox Content="Open folder after creating solution"
                IsChecked="{Binding OpenFolderOnCreate}" />
            <CheckBox Content="Start Visual Studio after creating solution"
                IsChecked="{Binding StartVisualStudio}" />
        </StackPanel>

        <catel:EmptyCell />

        <Button Command="{Binding Generate}"
            Content="Give me back 15 minutes of my life!"
            HorizontalAlignment="Left" />

        <catel:EmptyCell />
        <views:ConsoleView Width="800"
            catel:StackGrid.ColumnSpan="2" />

    </catel:StackGrid>
</catel:DataWindow>